---
import { isProjectOutdated } from "../lib/utils";

interface Project {
  title: string;
  link: string;
  endDate: string;
  subtitle: string;
  description: string;
  image?: string; // path relative to content file
}

const { project } = Astro.props as { project: Project };

const outdated = isProjectOutdated(project.endDate);
---

<div class="md:h-full">
  <a
    href={`/projects/${project.link}/`}
    class="no-underline md:h-full md:block"
  >
    <div
      class="rounded-xl px-4 py-auto mb-12 md:min-h-56 md:pt-8 md:pb-4 hover:shadow-md md:!h-[calc(100%-32px)] card"
    >
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {project.image && (
          <div class="self-center text-center w-full h-full">
            <img
              src={project.image}
              alt={project.title}
              class="max-h-48 mx-auto"
            />
          </div>
        )}
        <div class="self-center">
          <h3 class="text-2xl font-bold text-black">
            {project.title}
          </h3>
          <h4 class="mb-2 text-lg text-gray-500 flex items-center flex-wrap gap-2">
            {outdated && (
              <span class="inline-block rounded-full bg-gray-300 text-gray-700 px-2 py-0.5 text-sm">
                ðŸ•’ Old
              </span>
            )}
            {project.subtitle}
          </h4>
          <p class="text-xl text-black">
            {project.description}
          </p>
        </div>
      </div>
    </div>
  </a>
</div>
